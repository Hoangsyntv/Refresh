{
  "sections": {
    "breadcrumbs": {
      "type": "breadcrumbs",
      "settings": {
        "color_scheme": "scheme-1",
        "padding_top": 16,
        "padding_bottom": 16
      }
    },
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "VENDOR_LINK_PLACEHOLDER",
            "text_style": "body"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "meta_description": {
          "type": "text",
          "settings": {
            "text": "Meta description will be shown here",
            "text_style": "body"
          }
        },
        "sku": {
          "type": "sku",
          "settings": {
            "text_style": "body"
          }
        },
        "rating": {
          "type": "rating",
          "settings": {
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button",
            "swatch_shape": "circle"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "bullet_benefits": {
          "type": "bullet_point_benefits",
          "settings": {
            "benefit_1": "High-quality materials",
            "benefit_2": "Fast worldwide shipping", 
            "benefit_3": "30-day money-back guarantee",
            "style": "checkmark"
          }
        },
        "delivery_estimate": {
          "type": "estimated_arrival_date",
          "settings": {
            "delivery_text": "Estimated delivery",
            "min_days": 3,
            "max_days": 7,
            "show_shipping_icon": true,
            "text_style": "body"
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Share"
          }
        }
      },
      "block_order": [
        "title",
        "meta_description",
        "sku", 
        "vendor",
        "rating",
        "price",
        "bullet_benefits",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "delivery_estimate",
        "description",
        "share"
      ],
      "settings": {
        "enable_sticky_info": true,
        "color_scheme": "scheme-1",
        "media_size": "small",
        "constrain_to_viewport": true,
        "media_fit": "contain",
        "gallery_layout": "thumbnail_slider",
        "media_position": "left",
        "image_zoom": "lightbox",
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 60,
        "padding_bottom": 60
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "You may also like",
        "heading_size": "h2",
        "products_to_show": 4,
        "columns_desktop": 4,
        "color_scheme": "scheme-1",
        "image_ratio": "portrait",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 0,
        "padding_bottom": 60
      }
    },
    "sticky-atc": {
      "type": "sticky-add-to-cart",
      "settings": {
      }
    }
  },
  "order": [
    "breadcrumbs",
    "main", 
    "related-products",
    "sticky-atc"
  ]
}
