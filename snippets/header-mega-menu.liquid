                    class="mega-menu__panel"
                    tabindex="-1"
                    role="menu"
                    aria-labelledby="HeaderMenu-{{ link.handle }}"
                  >
                    <div class="mega-menu__container" style="max-width:1200px;margin:0 auto;padding:0 24px;display:flex;gap:40px;">
                      <!-- Left Icons Section -->
