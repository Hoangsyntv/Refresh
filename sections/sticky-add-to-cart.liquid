{%- unless product == empty -%}
  {% render 'sticky-add-to-cart' %}
{%- endunless -%}

{% schema %}
{
  "name": "Sticky Add to Cart",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_sticky_atc",
      "label": "Enable sticky add to cart",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme", 
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ]
}
{% endschema %}